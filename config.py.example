max_concurrent_requests = 5

# Notification settings
enable_role_mentions = True
notification_role_id = 1234567890123456789  # Role to mention for notifications

# Feature flags
enable_daily_reports = True
enable_community_sightings = True
enable_upcoming_releases = True
enable_automatic_scheduling = True

# Development settings
debug_mode = False
test_mode = False  # Set to True to disable actual Discord notifications during testing