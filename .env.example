# Pokemon Stock Discord Bot - Environment Variables
# Copy this file to .env and fill in your actual values

# Discord Bot Configuration (REQUIRED)
DISCORD_TOKEN=your_discord_bot_token_here
GUILD_ID=your_discord_guild_id_here
CHANNEL_ID=your_main_channel_id_here

# Additional Discord Channels (OPTIONAL)
VERIFIED_SIGHTINGS_CHANNEL=
COMMUNITY_SIGHTINGS_CHANNEL=
UPCOMING_RELEASES_CHANNEL=
BOT_LOGS_CHANNEL=

# Bot Behavior Settings
COMMAND_PREFIX=!
BOT_DESCRIPTION=Pokemon Stock Monitoring Bot
CHECK_INTERVAL=300
MAX_CONCURRENT_CHECKS=5
RATE_LIMIT_DELAY=2.0

# Database Configuration
DATABASE_PATH=data/pokemon_stock.db

# Web Scraping Configuration
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# Notification Settings
NOTIFICATION_ROLE=Stock Alerts
EMBED_COLOR=0x3498db

# Role Configuration
ROLE_STOCK_ALERTS=Stock Alerts
ROLE_MOD=Moderator
ROLE_VERIFIED_REPORTER=Verified Reporter

# Store Configuration (true/false to enable/disable stores)
STORE_NOVAGAMES_ENABLED=true
STORE_EBGAMES_ENABLED=true
STORE_WAREHOUSE_ENABLED=true
STORE_JBHIFI_ENABLED=true
STORE_KMART_ENABLED=true
STORE_FARMERS_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/pokemon_bot.log
